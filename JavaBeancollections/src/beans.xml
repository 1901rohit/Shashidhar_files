<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "Collection" class = "com.spring.Collection">
      
      <property name = "addressList">
         <list>
            <value>USA</value>
            <value>Russia</value>
            <value>Canada</value>
            <value>Australia</value>
         </list>
      </property>

      <property name = "addressSet">
         <set>
            <value>USA</value>
            <value>Russia</value>
            <value>Canada</value>
            <value>Australia</value>
         </set>
      </property>

      <property name = "addressMap">
         <map>
            <entry key = "1" value = "USA"/>
            <entry key = "2" value = "Russia"/>
            <entry key = "3" value = "Canada"/>
            <entry key = "4" value = "Australia"/>
         </map>
      </property>
      
      <property name = "addressProp">
         <props>
            <prop key = "one">USA</prop>
            <prop key = "one">USA</prop>
            <prop key = "two">Russia</prop>
            <prop key = "three">Canada</prop>
            <prop key = "four">Australia</prop>
         </props>
      </property>
   </bean>

</beans>